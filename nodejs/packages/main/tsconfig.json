{
  "compilerOptions": {
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./.eslintrc.cjs"]
}
